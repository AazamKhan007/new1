{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",             // Must be NodeNext for moduleResolution nodenext
    "moduleResolution": "NodeNext",   // NodeNext resolution
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
